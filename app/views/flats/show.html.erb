<div class="container mt-4">
    <!-- Google Maps Image Banner -->
    <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @flat.address %>&key=AIzaSyAPpx0wk4d-AQ8bhe8-a-ihC7NXLoPElhg')"></div>

  <div class="row">
    <!-- Left 2/3 Part -->
    <div class="col-md-8">
      <!-- Flat Name and Address Card -->
      <div class="card mt-3">
        <div class="card-body">
          <h3 class="card-title font-weight-bold"><%= @flat.name %></h3>
          <p><%= @flat.address %></p>
        </div>
      </div>

      <!-- Description Card -->
      <div class="card mt-3">
        <div class="card-body">
          <p><%= @flat.description %></p>
          <% if @flat.picture_url.present? %>
            <img src="<%= @flat.picture_url %>" alt="<%= @flat.name %>" class="flat-image img-fluid mt-3">
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right 1/3 Part -->
    <div class="col-md-4">
      <!-- Booking Form -->
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Book</h3>
          <%= form_with url: '#' do |f| %>
            <div class="form-group">
              <%= f.label :from %>
              <%= f.date_field :from, class: 'form-control' %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :to %>
              <%= f.date_field :to, class: 'form-control' %>
            </div>
            <%= f.submit "Book", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <!-- Details Card -->
      <div class="card mt-3">
        <div class="card-body">
          <h3 class="card-title">Details</h3>
          <p><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %> Guests</p>
          <p><i class="fas fa-dollar-sign"></i> <%= @flat.price_per_night %> / Night</p>
        </div>
      </div>
    </div>
  </div>
</div>
